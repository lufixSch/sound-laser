{
  "latex-workshop.latex.recipes": [
    {
      "name": "standard",
      "tools": ["latexmk"]
    },
    {
      "name": "Complete",
      "tools": ["latexmk", "glossary", "latexmk", "texcount"]
    },
    {
      "name": "xelatex",
      "tools": ["xelatex"]
    },
    {
      "name": "convert",
      "tools": ["latexmk-convert"]
    },
    {
      "name": "glossary",
      "tools": ["glossary"]
    },
    {
      "name": "word count",
      "tools": ["texcount"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "glossary",
      "command": "makeglossaries",
      "args": ["-d", "%OUTDIR%", "%DOCFILE%"]
    },
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%",
        "-f"
      ],
      "env": {}
    },
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-output-directory=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "latexmk-convert",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%",
        "-f",
        "-shell-escape"
      ],
      "env": {}
    },
    {
      "name": "texcount",
      "command": "texcount",
      "args": [
        "-sum",
        "-total",
        "-nosub",
        "-out=%OUTDIR%/words.txt",
        "%DIR%/src/pages/*.tex",
        "%DIR%/src/pages/**/*.tex",
        "%DIR%/src/pages/**/**/*.tex"
      ],
      "env": {}
    }
  ],
  "latex-workshop.latex.outDir": "%DIR%/build",
  "[latex]": {
    "editor.formatOnSave": false
  },
  "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools"
}
